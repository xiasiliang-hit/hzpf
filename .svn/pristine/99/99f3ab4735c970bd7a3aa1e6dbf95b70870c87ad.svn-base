<script>
    var openCode = function () {
        $(".mask2").show();
        $(".bitmap-box").show();
    }
    var closeCode = function () {
        $(".mask2").hide();
        $(".bitmap-box").hide();
    }
    var hideAddOk = function () {
        setTimeout(function () {
            $(".tip-box-ok").hide()
        }, 2000);
    }
        #if($!request.getParameter("show")=='code')
            #if(${wxAttention}=='false')
            openCode();
            #else
            hideAddOk();
            #end
        #end
    $(".close-btn").click(function(){
        _czc.push(["_trackEvent",'我的互助','关闭二维码',lurkDesc,'','']);
    });

    $(".addFamily").click(function () {
        _czc.push(["_trackEvent",'我的互助','添加加入',lurkDesc,'','']);
        window.location.href = "$!requestTool.getActivityUrl($!urlTool.getAbsoluteUrl($request,'/concur/information.htm?type=family'), $!request)";
    });

    Zepto(function($) {
        $(".click-li").click(function(){
            var num = $(this).attr("data-li-num");
            var statYm = $(this).attr("data-statistics-ym");
            _czc.push(["_trackEvent",'我的互助',statYm,lurkDesc,'','']);
            /*
            $(".tip").show();
            $(".tip .active").removeClass('active');
            $(".tip-"+num).addClass('active');
            $(".mask").show();
            $("body").addClass("ov");

            */
            $(".tip").hide();
            $(".tip .active").removeClass('active');
            $(".tip-"+num).parent().show();
            $(".tip-"+num).addClass("active");

            $(".mengchen").show();
        });
        $(".tip-close-btn").click(function(){
            /*
            $(".tip").hide();
            $(".mask").hide();
            $(".ov").removeClass("ov");
            */
            $(".tip").hide();
            $(".mengchen").hide();
        });
        $(".close-btn").click(function(){
            closeCode();
        });
        var maskDom = $(".mask");
        var arrow = $(".arrow");
        var show = function(){
            maskDom.show();
            arrow.show();
        }
        var hide = function(){
            maskDom.hide();
            arrow.hide();
        }
        var timer;
        $(".goInvitation").click(function(){
            show();
            _czc.push(["_trackEvent",'我的互助','分享点击',lurkDesc,'','invite']);
            //点击影藏
            $(".mask").on("click",function(){
                hide();
                clearTimeout(timer);
            });
            //延迟影藏
            timer = setTimeout(function(){
                hide();
                clearTimeout(timer);
            },5000);
        });
    });
</script>
